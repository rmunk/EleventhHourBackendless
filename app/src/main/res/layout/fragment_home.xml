<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.HomeFragment"
             android:background="@drawable/back">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="3"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/btn_health"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:background="@null"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/zdravlje"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_repair"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/servis"
            android:background="@null"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_beauty"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/ljepota"
            android:background="@null"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_intelectual"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/intelekt"
            android:background="@null"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/dom"
            android:background="@null"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_sports"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/sport"
            android:background="@null"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_travel"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:background="@null"
            android:src="@drawable/turizam"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_transport"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/prijevoz"
            android:background="@null"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btn_culture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:src="@drawable/kultura"
            android:background="@null"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:elevation="2dp"/>
    </GridLayout>
</FrameLayout>
